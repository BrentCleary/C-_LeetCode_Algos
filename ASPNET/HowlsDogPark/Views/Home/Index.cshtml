@model User

<div id="navbar"></div>


<div class="container text-center" style="max-width: 1322px;">
    <div class="row align-items-center justify-content-between">

        @* logo *@
        <div class="col-md-3">
            <a href="/"><img class="logo" src="~/images/Small_Logo.jpg" alt="logo"></a>
        </div>
        
        @* Our Park *@
        <div class="col-md-2">
            <div class="display-6">
                <a href="#our-park" class="no-decoration">Our Park</a>
            </div>
        </div>
        @* Open Hours *@
        <div class="col-md-2">
            <div class="display-6">
                <a href="#open-hours" class="no-decoration">Open Hours</a>
            </div>
        </div>
        @* Contact Us *@
        <div class="col-md-2">
            <div class="display-6">
                <a href="#contact-us" class="no-decoration">Contact Us</a>
            </div>
        </div>

        @* Login *@
            <div class="col-md-3 d-flex align-items-center">
                <div class="col-md-4 mb-3 d-flex align-items-center">
                    @{
                        if(Context.Session.GetInt32("UserId") == null)
                        {
                            <a href="/users/new" class="d-block text-black no-decoration"><h3>REGISTER</h3></a>
                            <a href="/users/new" class="d-block m-2"><button class="btn btn-info">LOGIN</button></a>
                        }
                        else
                        {
                            int? currentUserId = Context.Session.GetInt32("UserId");

                            <h1>@Model.FirstName</h1>

                            <a href="/users/new" class="d-block text-black no-decoration"><h3></h3></a>

                            <a href="/users/@currentUserId/show" class="d-block text-black no-decoration"><h3>View Profile</h3></a>
                            <a href="/users/logout" class="d-block m-2"><button class="btn btn-info">LOGOUT</button></a>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>




<body>
  
  <ul>
    <a href="#our-park"></a>
  </ul>

  <div id="our-park">
    <div class="container drop-shadow">

      @* Welcome Description *@
      <h2 class="display-3 text-center p-3">Dogs. Drinks. Food. And Friends</h2>
      <div class="row">
        
        <div class="col-md-2"></div>
        
        <h3 class="text-center display-6 col-md-8">
          Unwind at Howls Moving Dog Park in Old Town, a dog lover's paradise. Your pup enjoys playtime while you savor delicious food and craft beer. It's where dog lovers unite for unforgettable moments!
        </h3>

        <div class="col-md-2"></div>
      </div>

      @* Carousel *@
      <div class="p-5">
        @await Html.PartialAsync("_Carousel")
      </div>

    </div>


  </div>


<br>
<br>
<br>



  <div id="open-hours">
    <div class="container drop-shadow p-5">
      <div class="row">
        <div class="col-md-2"></div>
        
        <div class="col-md-10">
          <div>
            <h2 class="display-4 m-4">OPENING HOURS</h2>
          </div>
          <div class="row">
              <div class="row m-2">
                  <div class="display-6 col">MONDAY-FRIDAY</div>
                  <div class="display-6 col">1PM-9PM</div>
              </div>
              <div class="row m-2">
                  <div class="display-6 col">SATURDAY</div>
                  <div class="display-6 col">11AM-10PM</div>
              </div>
              <div class="row m-2">
                  <div class="display-6 col">SUNDAY</div>
                  <div class="display-6 col">11AM-9PM</div>
              </div>
          </div>
          <br>

          <div class="row">
            <h2 class="display-5 m-3 bg bg-warning">BOARDING DROP-OFF HOURS</h2>
            <div class="row m-1">
                <div class="display-6 col">MONDAY-FRIDAY</div>
                <div class="display-6 col">1PM-9PM</div>
            </div>
          </div>
        </div>
        
        <div class="col-md-2"></div>

      </div>
    </div>
  </div>



<br>
<br>


  <div id="contact-us">
      <div class="container drop-shadow p-5">
        <div class="row">
          <div class="col-md-1"></div>
          
          <div class="col-md-10">
              <div>
                <h2 class="display-4 m-4">Contact Us</h2>
              </div>
              <div class="row">
                  <div class="row m-2">
                    <div class="display-6 col">HowlsDogPark@network.com</div>
                  </div>
                  <div class="row m-2">
                    <div class="display-6 col">555-555-6789</div>
                  </div>
                  <div class="row m-2">
                      <div class="display-6 col">1234 Old Town Avenue, West City, Seattle, 98765</div>
                  </div>
              </div>

            <div class="row">
              <div class="row m-1">
              </div>
            </div>
          </div>
          
          <div class="col-md-1"></div>

        </div>
    </div>
  </div>

</body>
</html>


<div class="floating-bar">
<a href="#navbar"><button class="return-button bg bg-info display-4 d-flex justify-content-center align-items-center">^</button></a>
</div>
<script src="script.js"></script>


<div class="row text-center">
    @await Html.PartialAsync("_NavigationBar")
</div>




<style>

.body {
  background-image: url('~/images/Howls_Moving_Background.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
}

.drop-shadow {
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2); /* Adjust the values as needed */
}

.floating-bar {
    position: fixed;
    bottom: -50px; /* Off-screen initially */
    left: 0;
    right: 10px;
    background-color: rgba(0, 0, 0, 0); /* Transparent background */
    color: white;
    padding: 10px;
    border-radius: 5px;
    transition: bottom 0.3s ease-in-out; /* Add smooth transition */
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

.return-button{
  border-color: transparent;
  border-radius: 50%;
  height: 40px;
  width: 40px;
}

.no-decoration{
    text-decoration: none;
}

.logo{
    max-width: 50%;
    max-height: 50%;
  }

.custom-row{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.top{
    margin-top: auto;
}

.bottom{
    margin-bottom: auto;
}

.no-decoration{
    text-decoration: none;
}

</style>

