    right: 10px;
    background-color: rgba(0, 0, 0, 0); /* Transparent background */
    color: white;
    padding: 10px;
    border-radius: 5px;
    transition: bottom 0.3s ease-in-out; /* Add smooth transition */
    display: flex;
    justify-content: flex-end;
    align-items: center;
}

