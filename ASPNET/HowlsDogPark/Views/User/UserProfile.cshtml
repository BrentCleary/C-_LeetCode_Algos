@model User


<style>
  .logo{
    max-width: 50%;
    max-height: 50%;
  }

</style>

<div class="row text-center">
  @await Html.PartialAsync("_NavigationBar")
</div>

<div>
<h2 class="display-4 m-4">Hello User @Model.FirstName @Model.LastName</h2>
</div>

  <div id="membership">
    <div class="container drop-shadow p-5">
      <div class="row">
        <div class="col-md-1"></div>
        
        <div class="col-md-10">

          </div>
          <br>

          <div class="row">
            <h2 class="display-5 m-3 bg bg-warning col">CURRENT MEMBERSHIP</h2>
            <div class="row m-1">
                <div class="display-6 col">NONE</div>
            </div>
          </div>
        </div>
        
        <div class="col-md-1"></div>

      </div>
    </div>
  </div>



<br>
<br>

  <div id="your-dogs">
    <div class="container drop-shadow p-5">
      <div class="row">
        <div class="col-md-1"></div>
        
        <div class="col-md-10">

          </div>
          <br>

          @* Displays Your Dogs *@
          <div class="row">
            <h2 class="display-5 m-3 bg bg-warning col">YOUR DOGS</h2>
            <div class="row m-1">
                <div class="display-6 col">
                  @foreach (Dog pup in @Model.AllDogs)
                  {
                    <h1>@pup.Name</h1>
                  }
                </div>
            </div>
            @* Create / See Your Dogs *@
            <div class="row m-1">
                <div class="display-6 col">
                  <a href="/dogs/new" class="text-black d-block">Add A Dog</a>
                  <a href="/dogs" class="text-black d-block">See All Dogs</a>
                </div>
            </div>
          </div>
        </div>
        
        <div class="col-md-1"></div>

      </div>
    </div>
  </div>



  <br>
<br>

  <div id="your-dogs">
    <div class="container drop-shadow p-5">
      <div class="row">
        <div class="col-md-1"></div>
        
        <div class="col-md-10">

          </div>
          <br>

          <div class="row">
            <h2 class="display-5 m-3 bg bg-warning col">YOUR BOARDINGS</h2>
            <div class="row m-1">
                <div class="display-6 col">NONE</div>
            </div>
          </div>
        </div>
        
        <div class="col-md-1"></div>

      </div>
    </div>
  </div>



<div class="floating-bar">
<a href="#navbar"><button class="return-button bg bg-info display-4 d-flex justify-content-center align-items-center">^</button></a>
</div>
