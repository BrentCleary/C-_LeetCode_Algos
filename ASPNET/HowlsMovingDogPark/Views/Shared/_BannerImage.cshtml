@{
    Layout = null; // This partial doesn't use a layout
}

<html>
<head>
    <title>Partial Example</title>
    <!-- Include Bootstrap CSS (Assuming you have Bootstrap installed) -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<style>
  .logo{
    max-width: 100%;
    max-height: 100%;
  }

</style>

  
<div class="container" style="max-width: 1322px;">
    <div class="row">
        <div class="col-md-3">
            <img class="logo" src="~/images/Small_Logo.jpg" alt="logo">
        </div>
        <div class="col-md-3">
            <!-- Content for Column 2 -->
            <h4 style="color: #28a745;">Column 2</h4>
            <p>This is the content for the second column.</p>
        </div>
        <div class="col-md-3">
            <!-- Content for Column 3 -->
            <h4 style="color: #dc3545;">Column 3</h4>
            <p>This is the content for the third column.</p>
        </div>
        <div class="col-md-3">
            <!-- Content for Column 4 -->
            <h4 style="color: #ffc107;">Column 4</h4>
            <p>This is the content for the fourth column.</p>
        </div>
    </div>
</div>

<!-- Include Bootstrap JS and jQuery (if needed) -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>