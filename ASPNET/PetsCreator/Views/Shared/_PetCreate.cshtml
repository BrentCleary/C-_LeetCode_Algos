@model Pet

<form asp-action="CreatePet" asp-controller="Home" method="post" class="text-center" asp>
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Species"></label>
        <input asp-for="Species">
        <span asp-validation-for="Species"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>
    <div>
        <label asp-for="UserId"></label>
        <input asp-for="UserId" value="@ViewBag.currentUserID">
    </div>
    <input type="submit" value="Create Your Pet">
</form>

<h1>UserId in Session is @ViewBag.currentUserID</h1>

