@{
    ViewData["Title"] = "Home Page";
}

@model Pet

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<form asp-action="CreatePet" asp-controller="Home" method="post" class="text-center">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Species"></label>
        <input asp-for="Species">
        <span asp-validation-for="Species"></span>
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description">
        <span asp-validation-for="Description"></span>
    </div>
    <input type="submit" value="Create Your Pet">
</form>

<a href="/pet/all">See all Pets</a>